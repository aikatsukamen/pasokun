{
  "compilerOptions": {
    "module": "commonjs",
    "types": [
      "node"
    ],
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "noUnusedLocals": false
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "build",
    "acceptance-tests",
    "webpack",
    "jest",
    "*.mjd"
  ]
}